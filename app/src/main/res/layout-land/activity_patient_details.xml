<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/myclinic"
        android:id="@+id/photo"
        android:paddingTop="20dp"
        android:scaleType="centerCrop"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline9"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/calculatebill" />

    <TextView
        android:text="Name "
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/Name"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/photo"
        app:layout_constraintRight_toLeftOf="@+id/guideline7"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/calculatebill" />

    <TextView
        android:text="Fname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tfname"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textAlignment="textStart"
        app:layout_constraintBaseline_toBaselineOf="@+id/Name"
        app:layout_constraintLeft_toLeftOf="@+id/guideline7"
        app:layout_constraintRight_toLeftOf="@+id/guideline10"
        android:layout_marginEnd="8dp" />

    <TextView
        android:text="Mname "
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tmname"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tfname"
        app:layout_constraintLeft_toLeftOf="@+id/guideline10"
        app:layout_constraintRight_toLeftOf="@+id/guideline11" />

    <TextView
        android:text="Lname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tlname"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tmname"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline11" />

    <TextView
        android:text="Village "
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/Village"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:textAlignment="viewStart"
        tools:ignore="MissingConstraints"
        app:layout_constraintLeft_toLeftOf="@+id/Name"
        app:layout_constraintRight_toLeftOf="@+id/guideline7"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Name" />

    <TextView
        android:text="Village"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvillage"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/Village"
        app:layout_constraintLeft_toLeftOf="@+id/tfname"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:text="Mobile "
        android:id="@+id/Mobile"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:textAlignment="textStart"
        tools:ignore="MissingConstraints"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/Village"
        app:layout_constraintRight_toLeftOf="@+id/guideline7"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Village" />

    <TextView
        android:text="Mobile"
        android:layout_width="0dp"
        android:id="@+id/tmobile"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/Mobile"
        app:layout_constraintLeft_toLeftOf="@+id/tvillage"
        app:layout_constraintRight_toRightOf="@+id/tvillage" />

    <Button
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="All Visits"
        android:id="@+id/allvisits"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline9" />

    <Button
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Add Visits"
        android:id="@+id/addvisits"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintLeft_toLeftOf="@+id/allvisits"
        app:layout_constraintRight_toRightOf="@+id/allvisits"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/allvisits" />

    <Button
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:id="@+id/calculatebill"
        android:text="Calculate Bill"
        app:layout_constraintLeft_toLeftOf="@+id/addvisits"
        app:layout_constraintRight_toRightOf="@+id/addvisits"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/addvisits" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline7"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="110dp"
        app:layout_constraintGuide_percent="0.20661157" />

    <android.support.constraint.Guideline
        android:layout_width="533dp"
        android:layout_height="0dp"
        android:id="@+id/guideline8"
        app:layout_constraintGuide_percent="0.40536514"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="103dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline9"
        app:layout_constraintGuide_percent="0.56328124"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="300dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline10"
        app:layout_constraintGuide_percent="0.46015626"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="245dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline11"
        app:layout_constraintGuide_percent="0.725"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="386dp" />
</android.support.constraint.ConstraintLayout>